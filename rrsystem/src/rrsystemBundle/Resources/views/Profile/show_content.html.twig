{% trans_default_domain 'FOSUserBundle' %}

<nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('/') }}">Room booking</a>
        </div>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="{{ path('fos_user_profile_show') }}">Profil / Ustawienia</a></li>
                <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-off"></span> Wyloguj</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class='container-fluid'>
    <div class='row show-user'>
        <div class='col-lg-3 col-md-3 col-sm-3'></div>
        <div class='col-lg-6 col-md-6 col-sm-6'>
            <div class="fos_user_user_show">
                <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
                <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
            </div>
            <h3>Edit data:</h3>
            {% render url('fos_user_profile_edit') %}
            <a href="{{ path('fos_user_resetting_request')}}" class='btn btn-danger btn-reset-pass'>Reset password</a>
        </div>
        <div class='col-lg-3 col-md-3 col-sm-3'></div>
    </div>
</div>